#include <iostream>
#include <string>
using namespace std;

// Convert grade string to grade point
float gradeToPoint(string grade) {
    if (grade == "A+") return 10.0;
    if (grade == "A") return 9.0;
    if (grade == "B+") return 8.0;
    if (grade == "B") return 7.0;
    if (grade == "C+") return 6.0;
    if (grade == "C") return 5.0;
    if (grade == "D") return 4.0;
    if (grade == "F") return 0.0;
    return -1.0; // Invalid
}

int main() {
    const int MAX = 100;
    int n;
    string grades[MAX];
    int credits[MAX];
    float gradePoints[MAX];

    float totalCredits = 0, totalGradePoints = 0;

    cout << "Enter number of courses: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        cout << "\nEnter grade for course " << i + 1 << ": ";
        cin >> grades[i];

        float point = gradeToPoint(grades[i]);
        while (point < 0) {
            cout << "Invalid grade. Enter again: ";
            cin >> grades[i];
            point = gradeToPoint(grades[i]);
        }

        cout << "Enter credit hours for course " << i + 1 << ": ";
        cin >> credits[i];

        gradePoints[i] = point * credits[i];
        totalGradePoints += gradePoints[i];
        totalCredits += credits[i];
    }

    float cgpa = totalGradePoints / totalCredits;

    cout << "\n--- Result ---\n";
    for (int i = 0; i < n; i++) {
        cout << "Course " << i + 1 << ": Grade = " << grades[i]
             << ", Credit = " << credits[i]
             << ", Grade Points = " << gradePoints[i] << "\n";
    }

    cout << "Total Credits: " << totalCredits << "\n";
    cout << "Total Grade Points: " << totalGradePoints << "\n";
    cout << "Final CGPA: " << cgpa << "\n";

    return 0;
}
